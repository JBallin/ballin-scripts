#!/usr/bin/env bash

update() {
  printf "ðŸ‘Ÿ getting fresh kicks...\n"

  git fetch > /dev/null
  if [ $? -ne 0 ]; then
    printf "git fetch failed\n"
    exit 1
  fi

  git merge &> /dev/null
  if [ $? -ne 0 ]; then
    printf "git merge failed. stashing changes and trying again...\n"
    git add . && git stash && git checkout main && git merge &> /dev/null
    if [ $? -ne 0 ]; then
      printf "git merge failed again.\n"
      exit 1
    fi
  fi

  printf "\n"
  ./install.sh
}

(
  cd $HOME/.ballin-scripts
  update
)
